@model MoonlightShadow.ViewModels.LoginViewModel;

<!-- Modal -->
<div class="modal fade" id="ConfirmVerificationMail" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="confirmVerificationMailLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmVerificationMailLabel">Mail zweryfikowany</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Mail został zweryfikowany i aktualnie jesteś w stanie się zalogować.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
      </div>
    </div>
  </div>
</div>